#!/usr/bin/env node
const config = require(process.cwd() + '/config.json');
const bundler = require('../index');
const bundle = bundler(config);

switch (process.argv[2]) {
  case 'electron.dev.build':
    bundle.electron.dev.build();
    break;
  case 'electron.dev.build.watch':
    bundle.electron.dev.build.watch();
    break;
  case 'libs.build':
    bundle.libs.build();
    break;
  case 'libs.publish':
    bundle.libs.publish();
    break;
  case 'messages.build':
    bundle.messages.build();
    break;
  case 'web.build':
    bundle.web.build();
    break;
  case 'web.dev.build':
    bundle.web.dev.build();
    break;
  case 'web.dev.start':
    bundle.web.dev.start();
    break;
  case 'web.dll.build':
    bundle.web.dll.build();
    break;
  case 'web.server.build':
    bundle.web.server.build();
    break;
  case 'web.server.dev.build':
    bundle.web.server.dev.build();
    break;
  case 'web.server.dev.build.watch':
    bundle.web.server.dev.build.watch();
    break;
  case 'web.server.dev.start':
    bundle.web.server.dev.start();
    break;
  default:
    console.error('Unknown command', process.argv[2]);
    break;
}